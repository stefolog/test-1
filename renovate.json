{
  "extends": ["config:base", "schedule:earlyMondays", ":semanticCommits"],
  "rebaseStalePrs": true,
  "timezone": "Europe/Helsinki",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "vulnerabilityAlerts": {
    "labels": ["security-alert"]
  },
  "lockFileMaintenance": { "enabled": true, "automerge": "true" },
  "packageRules": [
    {
      "groupName": "minor-versions",
      "description": "Automerge all minor versions and below",
      "packagePatterns": ["*"],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": ["node", "@types/node"],
      "allowedVersions": "/^14.*$/"
    },
    {
      "groupName": "v-validation",
      "matchPackageNames": ["@finnair/v-validation", "@finnair/v-validation-moment", "@finnair/path"]
    },
    {
      "groupName": "dazn-lambda-powertools",
      "matchPackagePatterns": ["^@dazn/lambda-powertools-"]
    }
  ],
  "encrypted": {
    "npmToken": ""
  },
  "npmrc": "@finnairoyj:registry=https://npm.pkg.github.com\n@fcom:registry=https://nexus.code.tools.cloud.finnair.com/nexus/repository/npm/\n//nexus.code.tools.cloud.finnair.com/nexus/repository/npm/:_auth=${NPM_TOKEN}",
  "hostRules": [
    {
      "hostType": "npm",
      "hostName": "npm.pkg.github.com",
      "encrypted": {
        "token": ""
      }
    }
  ]
}
